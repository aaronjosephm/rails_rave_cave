<h2 style="text-align: center; margin-top: 10vh; font-size: 30px;">Bookings that you've made: </h2>
<% @bookings.each do |booking| %>
  <div class="booking-card">
    <h2><%= booking.warehouse.name %></h2>
    <img src=<%= "#{booking.warehouse.photo}" %> style="height: 400px; width: auto; border-radius: 15px; align-self: center;">
    <h2><%= booking.event_name %></h2>
    <h2> Date booked: <%= booking.date %> </h2>
    <h2> Price: <%= Warehouse.find(booking[:warehouse_id]).price %> </h2>
    <% if policy(booking).destroy? %>
      <h1 style="margin-top: 5vh; color: black !important;"><%= link_to booking_path(booking), method: :delete do %>
        <i class="fas fa-trash-alt" style="color: black;"></i></h1>
      <% end %>
    <% end %>
  </div>
<% end %>
<h1 style="margin-left: 10vw; font-size: 30px; color: black !important;"><%= link_to  "back", :back, method: :get %></h1>


<span id="snackbar" data-toggle=snackbar data-content="Booking request sent!"></span>
