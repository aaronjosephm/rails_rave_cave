<div class="warehouses-banner">
</div>
<<div class="container">
  <h1>Current bookings on your listings: </h1>
  <table class="table table-hover table-dark">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Event Name</th>
        <th scope="col">Date</th>
        <th scope="col">Cancel Booking</th>
      </tr>
    </thead>
    <tbody>
      <% @warehouses.each do |warehouse| %>
        <% warehouse.bookings.each do |booking| %>
          <tr>
            <th scope="row">1</th>
            <td><%= warehouse.name%></td>
            <td><%= booking.event_name%></td>
            <td><%= booking.date %></td>
            <td>
              <% if policy(booking).destroy? %>
                <%= link_to booking_path(booking), method: :delete do %>
                  <i class="fas fa-trash-alt"></i>
                <% end %>
              <% end %>
            </td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>

<div class="row" style="margin-top: 10vh; margin-left: 5vw; margin-right: 5vw;">
  <% @warehouses.each do |warehouse| %>

    <div class="col-md-4" style="text-align: center; display: flex;">

      <div class="card" >
        <%= link_to warehouse_url(warehouse) do %>
          <div class="card-body" style="background-image: url(<%= "#{warehouse.photo}" %>);">
          </div>
          <div class="card-footer">
            <h1><%= warehouse.name %></h1>
            <p><%= warehouse.subtitle %></p>
            <h1><%= warehouse.price %></h1>
            <% if policy(warehouse).destroy? %>
              <%= link_to warehouse_url(warehouse), method: :delete do %>
                <i class="fas fa-trash-alt"></i>
              <% end %>
            <% end %>
            <% if policy(warehouse).edit? %>
              <%= link_to edit_warehouse_url(warehouse), method: :get do %>
                <i class="fas fa-edit"></i>
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>

    </div>
  <% end %>
  <%= link_to  profile_url, method: :get do %>
  <h1><i class="fas fa-hand-point-left"></i></h1>
<% end %>
</div>

