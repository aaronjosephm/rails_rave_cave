


  <div class="search-button" style="position: relative; margin-top: -20vh;">
          <%= form_tag warehouses_url, method: :get do %>
          <div class="row" style="display: inline-flex; width: 100%; height: 5vh;">
            <div class="input-group col-8 ">
              <div class="col-6 offset-md-6">
                <%= text_field_tag :query,
                  params[:query],
                  class: "form-control",
                    style: "height: 100%; line-height: 100%; font-size: 18px;",
                  placeholder: "Find a warehouse"
                %>
              </div>
          </div>
          <div class="col-0 ">
            <%= submit_tag "search", class: "btn btn-success", style: "height: 100%; font-size: 20px;" %>
          </div>
        </div>
        </div>
      <% end %>
  </div>
</div>


<div class="row" style="margin-top: 10vh; margin-left: 5vw; margin-right: 5vw;">
  <% @warehouses.each do |warehouse| %>

    <div class="col-md-4" style="text-align: center; display: flex;">

      <div class="card" >
        <%= link_to warehouse_url(warehouse) do %>
          <div class="card-body" style="background-image: url(<%= "#{warehouse.photo}" %>);">
          </div>
          <div class="card-footer">
            <h1><%= warehouse.name %></h1>
            <p><%= warehouse.subtitle %></p>
            <h2><%= warehouse.price %></h2>
          </div>
        <% end %>
      </div>

    </div>
  <% end %>
</div>
<%= link_to  profile_url, method: :get do %>
  <h1><i class="fas fa-hand-point-left"></i></h1>
<% end %>


