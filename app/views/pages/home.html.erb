
<div class="home-banner" style="background">
  <div class="banner-content">
    <div class="carousel-border">
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img class="d-block w-100" src=<%= image_path 'warehouse1.png' %> alt="First slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src=<%= image_path 'warehouse6.jpg' %> alt="Second slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src=<%= image_path 'rave2.jpg' %> alt="Third slide">
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  </div>
  <div class="search-button">
          <%= form_tag warehouses_url, method: :get do %>
          <div class="row" style="display: inline-flex; width: 100%; height: 5vh;">
            <div class="input-group col-8 ">
              <div class="col-6 offset-md-6">
                <%= text_field_tag :query,
                  params[:query],
                  class: "form-control",
                    style: "height: 100%; line-height: 100%; font-size: 18px;",
                  placeholder: "Find a warehouse"
                %>
              </div>
          </div>
          <div class="col-0 ">
            <%= submit_tag "search", class: "btn btn-success", style: "height: 100%; font-size: 20px;" %>
          </div>
        </div>
        </div>
      <% end %>
  </div>
</div>
 <div class="row" style="margin-top: 5vh; margin-left: 5vw; margin-right: 5vw;">
  <% @warehouses.first(6).each do |warehouse| %>
    <div class="col-md-4" style="text-align: center; display: flex;">
      <div class="card" >
        <%= link_to warehouse_url(warehouse) do %>
          <div class="card-body" style="background-image: url(<%= "#{warehouse.photo}" %>);">
          </div>
          <div class="card-footer">
            <h1><%= warehouse.name %></h1>
            <p><%= warehouse.description %></p>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
   <%= link_to "View more listings", warehouses_url, method: :get, class: "btn btn-success", style: "padding: 2vh !important; font-size: 13px;" %>

</div>

